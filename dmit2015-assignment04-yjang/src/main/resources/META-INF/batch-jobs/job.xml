<job id="myJob" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">

    <step id="downloadFileStep" next="importDataStep" >
        <batchlet ref="downloadCsvFileBatchlet">
            <properties>
                <property name="csv_file_uri"
                          value="https://data.edmonton.ca/api/views/q7d6-ambg/rows.csv?accessType=DOWNLOAD"/>
                <property name="file_download_path"
                          value="/home/user2015/Downloads"/>
            </properties>
        </batchlet>
    </step>

    <step id="importDataStep">
        <chunk item-count="10">
            <reader ref="edmontonPropertyAssessmentItemReader">
                <properties>
                    <property name="input_file"
                              value="/home/user2015/Downloads/Property_Assessment_Data__Current_Calendar_Year.csv"/>
                    <property name="max_results"
                              value="0" />
                </properties>
            </reader>
            <processor ref="edmontonPropertyAssessmentItemProcessor"></processor>
            <writer ref="edmontonPropertyAssessmentItemWriter"></writer>
        </chunk>
    </step>

</job>